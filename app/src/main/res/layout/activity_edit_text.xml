<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_16dp"
    tools:context="com.ayvytr.ktxapp.et.EditTextActivity">

    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:hint="edit text" />

    <Button
        android:id="@+id/btn_clear_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="clear text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_select_text1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="selectText(text, false)" />

        <Button
            android:id="@+id/btn_select_text2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="selectText(text, true)" />
    </LinearLayout>
</LinearLayout>